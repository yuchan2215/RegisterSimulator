<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--レジを開く-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/open_register_button"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="@dimen/top_button_width"
        android:layout_height="wrap_content"
        android:text="@string/open_cash_register_button"
        app:icon="@drawable/shopping_cart_checkout"
        app:layout_constraintBottom_toTopOf="@+id/open_settings_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="レジを開く" />

    <!--設定を開く-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/open_settings_button"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:layout_width="@dimen/top_button_width"
        android:layout_height="wrap_content"
        android:text="@string/open_settings_button"
        app:icon="@drawable/settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/open_register_button" />


</androidx.constraintlayout.widget.ConstraintLayout>